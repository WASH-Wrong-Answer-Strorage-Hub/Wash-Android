<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/social_login_background_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/social_login_backgronud"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wash_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="84dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/social_login_kakao_layout"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:background="@drawable/kakao_btn_background"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="550dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <ImageView
            android:id="@+id/kakao_btn_img"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/ic_kakao"
            app:layout_constraintStart_toStartOf="@id/social_login_kakao_layout"
            app:layout_constraintTop_toTopOf="@id/social_login_kakao_layout"
            app:layout_constraintBottom_toBottomOf="@id/social_login_kakao_layout"
            android:layout_marginStart="24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오 로그인"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/social_login_kakao_layout"
            app:layout_constraintEnd_toEndOf="@id/social_login_kakao_layout"
            app:layout_constraintTop_toTopOf="@id/social_login_kakao_layout"
            app:layout_constraintBottom_toBottomOf="@id/social_login_kakao_layout"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/social_login_naver_layout"
        android:layout_width="0sp"
        android:layout_height="47dp"
        android:background="@drawable/naver_btn_background"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/social_login_kakao_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <ImageView
            android:id="@+id/naver_btn_img"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/ic_naver"
            app:layout_constraintStart_toStartOf="@id/social_login_naver_layout"
            app:layout_constraintTop_toTopOf="@id/social_login_naver_layout"
            app:layout_constraintBottom_toBottomOf="@id/social_login_naver_layout"
            android:layout_marginStart="24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네이버 로그인"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/social_login_naver_layout"
            app:layout_constraintEnd_toEndOf="@id/social_login_naver_layout"
            app:layout_constraintTop_toTopOf="@id/social_login_naver_layout"
            app:layout_constraintBottom_toBottomOf="@id/social_login_naver_layout"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
