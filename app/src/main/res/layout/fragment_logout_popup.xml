<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/mypage_logout_background"
        android:layout_width="220dp"
        android:layout_height="144dp"
        android:background="@drawable/mypage_logout_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:layout_width="26sp"
        android:layout_height="26sp"
        android:background="@drawable/ic_caution"
        app:layout_constraintStart_toStartOf="@id/mypage_logout_background"
        app:layout_constraintTop_toTopOf="@id/mypage_logout_background"
        android:layout_marginTop="21dp"
        android:layout_marginStart="97dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃 하시겠습니까?"
        android:fontFamily="@font/mangoddobak_r"
        android:textSize="12dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/mypage_logout_background"
        app:layout_constraintStart_toStartOf="@id/mypage_logout_background"
        android:layout_marginTop="70dp"
        android:layout_marginStart="50dp"
        />

    <View
        android:id="@+id/logout_cancel_view"
        android:layout_width="78dp"
        android:layout_height="25dp"
        android:background="@drawable/logout_cancel_background"
        app:layout_constraintTop_toTopOf="@id/mypage_logout_background"
        app:layout_constraintStart_toStartOf="@id/mypage_logout_background"
        android:layout_marginTop="105dp"
        android:layout_marginStart="27dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:fontFamily="@font/mangoddobak_r"
        android:text="취소"
        app:layout_constraintTop_toTopOf="@id/logout_cancel_view"
        app:layout_constraintBottom_toBottomOf="@id/logout_cancel_view"
        app:layout_constraintStart_toStartOf="@id/logout_cancel_view"
        app:layout_constraintEnd_toEndOf="@id/logout_cancel_view"
        />

    <View
        android:id="@+id/logout_view"
        android:layout_width="78dp"
        android:layout_height="25dp"
        android:background="@drawable/logout_background"
        app:layout_constraintBottom_toBottomOf="@id/mypage_logout_background"
        app:layout_constraintEnd_toEndOf="@id/mypage_logout_background"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="27dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:fontFamily="@font/mangoddobak_r"
        android:text="확인"
        app:layout_constraintTop_toTopOf="@id/logout_view"
        app:layout_constraintBottom_toBottomOf="@id/logout_view"
        app:layout_constraintStart_toStartOf="@id/logout_view"
        app:layout_constraintEnd_toEndOf="@id/logout_view"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
